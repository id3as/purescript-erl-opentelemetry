{deps,
  [ 
    {opentelemetry_api, "1.0.0"},
    {opentelemetry, "1.0.0"}
  ]
}.
{extra_src_dirs, []}.

{profiles, [ {dist_profile, [ {src_dirs, ["erl_src", "output"]}
                    , {extra_src_dirs, []}
                    ]}
           , {test_profile, [ {deps, []}
                    , {erl_opts, [debug_info]}
                    , {src_dirs, ["erl_src", "testoutput"]}
                    , {extra_src_dirs, []}
                    ]}
           ]}.

